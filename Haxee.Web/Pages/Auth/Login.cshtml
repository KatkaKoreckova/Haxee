@page
@model Haxee.Web.Pages.Auth.LoginModel

<div class="landing flex flex-col justify-center sm:py-12">
    <div class="p-10 xs:p-0 w-full md:mx-auto md:w-full md:max-w-md">
        <div class="w-full flex flex-row justify-center mb-6">
            <img src="~/images/LSTME-logo.png" class="w-40 self-center " />
        </div>
        <div class="my-card divide-y divide-gray-200">
            @using (Html.BeginForm(FormMethod.Post, true, new { @class = "" }))
            {
                <div class="">
                    <div class="w-full flex flex-col">
                        @Html.LabelFor(model => model.Input.Email)
                        @Html.EditorFor(model => model.Input.Email, new { htmlAttributes = new { @class = "input-field" } })
                        @Html.ValidationMessageFor(model => model.Input.Email)
                    </div>
                    <div class="w-full flex flex-col mt-3">
                        @Html.LabelFor(model => model.Input.Password)
                        @Html.EditorFor(model => model.Input.Password, new { htmlAttributes = new { @class = "input-field" } })
                        @Html.ValidationMessageFor(model => model.Input.Password)
                    </div>
                    
                    <button class="mt-3 button-main">
                        Prihlásiť
                    </button>
                    <button class="button-gray" onclick="MakeVisible('#forgotPassword')">
                        Zabudnuté heslo
                    </button>
                </div>
            }
        </div>
        <div class="mt-3">
            <a href="/" class="transition duration-200 cursor-pointer font-normal text-sm rounded-lg text-gray-300 hover:text-black ">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 inline-block align-text-top">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                <span class="inline-block ml-1">Späť</span>
            </a>
        </div>
    </div>
</div>

